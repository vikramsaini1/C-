#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the number : ";
    cin >> n;
    int number;
    number =1;
    int row;
    int col;
    
    for(row=0; row<=n; row++){
        for(col=0; col<row; col++){
            cout<<number<<" ";
            number++;
        }
        cout<<endl;
    }
    
     

    

    return 0;
}
